Bootstrap: docker
From: pytorch/pytorch:latest

%files
    ./trojan_detector.py /
    ./neuron.py /
    ./SCAn.py /
    ./utils.py /

%post
    /opt/conda/bin/conda install scikit-image
    /opt/conda/bin/conda install scikit-learn
    /opt/conda/bin/conda install -c anaconda scipy

%runscript
    exec python3 /trojan_detector.py "$@"
